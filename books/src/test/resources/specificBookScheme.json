{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "isbn": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["fiction", "non-fiction", "biography", "science", "history"]
    },
    "price": {
      "type": "number"
    },
    "current-stock": {
      "type": "integer"
    },
    "available": {
      "type": "boolean"
    }
  },
  "required": ["id", "name", "author", "isbn", "type", "price", "current-stock", "available"]
}
